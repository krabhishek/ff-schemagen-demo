rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /leads/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /leads/{parent}/source/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/source/{document} {
      allow read: if true;
    }


    match /home_loan_applications/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /home_loan_applications/{parent}/demographicDetails/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/demographicDetails/{document} {
      allow read: if true;
    }


    match /home_loan_applications/{parent}/personalContactInformation/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/personalContactInformation/{document} {
      allow read: if true;
    }


    match /home_loan_applications/{parent}/incomeDetails/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/incomeDetails/{document} {
      allow read: if true;
    }

  }
}
